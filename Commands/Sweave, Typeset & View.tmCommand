	<string>html</string>
	<key>outputLocation</key>
	<string>newWindow</string>
	<key>scope</key>
	<string>text.tex.latex.sweave, text.tex.latex.sweave source.r</string>
	<key>semanticClass</key>
	<string>process.run.tex.latex.sweave</string>
	<key>uuid</key>
	<string>F599ACE4-6B59-4235-A2BF-7BABA5C911B7</string>
